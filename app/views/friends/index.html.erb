<br>
<div class="table-responsive">
<table class="table table-hover table table-bordered table-striped">
  <caption>List of Friends</caption>
  <thead class="thead-dark">
  <tr>
    <th>First name</th>
    <th>Last name</th>
    <th>Email</th>
    <th>Phone</th>
    <th>Facebook</th>
    <th>Actions</th>
  </tr>
  </thead>
  <tbody>
  <% @friends.each do |friend| %>
    <tr>
      <td><%= friend.first_name %></td>
      <td><%= friend.last_name %></td>
      <td><%= friend.email %></td>
      <td><%= friend.phone %></td>
      <td><%= friend.facebook %></td>
      <td>
        <%= link_to "Show", friend %>
        <%= link_to "Edit", edit_friend_path(friend) %>
        <%= link_to "Delete", friend, method: :delete, data: { confirm: "Are you sure?" } %>
      </td>
    </tr>
  <% end %>
  </tbody>
</table>
</div>
<%= link_to "New friend", new_friend_path , class: "btn btn-secondary" %>